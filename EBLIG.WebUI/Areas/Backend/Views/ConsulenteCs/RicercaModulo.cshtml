@model EBLIG.WebUI.Areas.Backend.Models.ConsulenteCsRicercaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Ricerca", new AjaxOptions
{
    UpdateTargetId = "resultRicerca",
    OnBegin = "onBeginRicerca",
    OnSuccess = "alertClose",
    OnFailure = "handleError"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ConsulenteCsRicercaModel_ComuneId)

    <div class="form-horizontal">

        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Ragione Sociale", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.ConsulenteCsRicercaModel_RagioneSociale, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConsulenteCsRicercaModel_RagioneSociale, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Codice Fiscale / Partita Iva", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.ConsulenteCsRicercaModel_CodiceFiscalePartitaIva, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConsulenteCsRicercaModel_CodiceFiscalePartitaIva, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Comune", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @*@Html.DropDownListFor(model => model.ConsulenteCsRicercaModel_ComuneId, Html.SelectList(Model.Comuni.OrderBy(o => o.DENCOM), "ComuneId", "DENCOM", true), new { @class = "form-control" })*@
                        @Html.TextBoxFor(model => model.ConsulenteCsRicercaModel_Comune, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConsulenteCsRicercaModel_ComuneId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        @{ 
            var _listOrderBy = new Dictionary<string, string>();
            _listOrderBy.Add("RagioneSociale", "Ragione sociale");
            _listOrderBy.Add("CodiceFiscalePIva", "Codice Fiscale");
           
        }
        <div class="row mt-1">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Ordina per", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.Ordine, Html.SelectListOrderBy(_listOrderBy), new { @class = "form-control" })
                    </div>
                </div>


            </div>
            @*<div class="col-md-4">

                <div class="form-group">
                    @Html.Label("Righe da visualizzare", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.PageSize, Html.SelectListPageSize(), new { @class = "form-control" })
                    </div>
                </div>

            </div>*@
        </div>

        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Avvia ricerca</button>
        </div>
    </div>
}

@Html.AutocompleteComuniConsulenteCs("ConsulenteCsRicercaModel_Comune", "ConsulenteCsRicercaModel_ComuneId", "ConsulenteCsRicercaModel_ComuneId")

<script src="~/Scripts/unobtrusiveParseForm.js"></script>
