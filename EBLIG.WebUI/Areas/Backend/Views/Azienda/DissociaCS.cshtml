@model EBLIG.WebUI.Areas.Backend.Models.DissociaCS

@using (Ajax.BeginForm("Dissocia", new AjaxOptions
{
    OnBegin = "alertWaid()",
    OnSuccess = "onSuccessElimina"
}))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(model => model.AziendaId, new { @hidden = true, @readonly = true })

<div class="form-horizontal">
    <h4>
        @Html.Label("Sei sicuro di voler dissociare il Consulente dalla Azienda associata?", new { htmlAttributes = new { @style = "border-width : 0; width: -webkit-fill-available;" } })
    </h4>
    <div class="modal-footer row" style="margin-top: 30px">
        <div class="col-md-12 text-center">
            <input type="submit" value="Dissocia" class="btn btn-success" />
            <input type="button" value="Chiudi finestra" onclick="hideModal()" class="btn btn-danger" />
        </div>
    </div>
</div>
}
<script>
    function onSuccessElimina(data) {
        @Html.OnSuccessHideModal()
    }
</script>