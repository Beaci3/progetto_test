@model EBLIG.WebUI.Areas.Admin.Models.CoperturaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Nuovo", new AjaxOptions
{
    OnBegin = "alertWaid()",
    OnSuccess = "onSuccessNuovo"
}))
{
    @Html.AntiForgeryToken()
<h3>Nuova Copertura</h3>
    <hr />
    <div class="form-horizontal">
        <div class="row">

            <div class="form-group col-md-12">
                @Html.Label("Matricola", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.AziendaId, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
                    @Html.ValidationMessageFor(model => model.AziendaId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.Label("Copertura S/N", htmlAttributes: new { @class = "control-label" })
                <div>

                    @Html.CheckBoxFor(model => model.Coperto.Value, htmlAttributes: new { @style = "margin-bottom:30px", @Id = "Copertura", @Name = "Copertura" })
                </div>
            </div>

            <div class="modal-footer row" style="margin-top: 30px">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Nuovo" class="btn btn-success" />
                    <input type="button" value="Chiudi finestra" onclick="hideModal()" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function onSuccessNuovo(data) {
        @Html.OnSuccessHideModal()
    }
</script>

