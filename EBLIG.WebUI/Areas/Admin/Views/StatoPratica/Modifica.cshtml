@model EBLIG.WebUI.Areas.Admin.Models.StatoPraticaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Modifica", new AjaxOptions
{
    OnBegin = "alertWaid()",
    OnSuccess = "onSuccessModifica"
}))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(model => model.StatoPraticaId, new { @hidden = true, @readonly = true })

<h3>Modifica Stato Pratica</h3>
    <hr />
    <div class="form-horizontal">
        <div class="row">

            <div class="form-group col-md-12">
                @Html.Label("Descrizione", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.Label("Ordine", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Ordine, new { htmlAttributes = new { @class = "form-control", @maxlength = "4" } })
                    @Html.ValidationMessageFor(model => model.Ordine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.Label("Sola Lettura", htmlAttributes: new { @class = "control-label" })
                <div>
                    @if (Model.ReadOnly == null)
                    {
                        Model.ReadOnly = false;
                    }

                    @Html.CheckBoxFor(model => model.ReadOnly.Value, htmlAttributes: new { @style = "margin-bottom:30px", @Id = "ReadOnly", @Name = "ReadOnly" })
                </div>
            </div>

            <div class="modal-footer row" style="margin-top: 30px">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Modifica" class="btn btn-success" />
                    <input type="button" value="Chiudi finestra" onclick="hideModal()" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function onSuccessModifica(data) {
        @Html.OnSuccessHideModal()
    }
</script>



