@model EBLIG.WebUI.Areas.Admin.Models.ComuniModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Ricerca", new AjaxOptions
{
    UpdateTargetId = "resultRicerca",
    OnBegin = "onBeginRicerca",
    OnSuccess = "alertClose",
}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Denominazione", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.DenCom, new { @class = "form-control", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.DenCom, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Codice Comune", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.CodCom, new { @class = "form-control", @style = "text-transform:uppercase", @maxlength = "4"})
                        @Html.ValidationMessageFor(model => model.CodCom, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Provincia", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.DenPro, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SigPro, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>

        <hr />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Avvia ricerca</button>
        </div>
    </div>

    @Html.HiddenFor(x=>x.SigPro)
}

@Html.Autocomplete("DenPro", "SigPro", "DenPro", "Comuni", "DENPRO", "SIGPRO", Url.Action("GetProvince", "Comuni"), "phrase")

