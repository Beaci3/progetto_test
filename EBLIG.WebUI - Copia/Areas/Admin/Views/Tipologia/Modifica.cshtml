@model EBLIG.WebUI.Areas.Admin.Models.TipologiaModel

@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("Modifica", new AjaxOptions
{
    OnBegin = "alertWaid()",
    OnSuccess = "onSuccessModifica"
}))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(model => model.TipologiaId, new { @hidden = true, @readonly = true })

<h3>Modifica Tipologia</h3>
    <hr />
    <div class="form-horizontal">
        <div class="row">

            <div class="form-group col-md-12">
                @Html.Label("Descrizione", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control", @maxlength = "300" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.Label("Parte Sociale", htmlAttributes: new { @class = "control-label" })
                <div>
                    @if (Model.Partesociale == null)
                    {
                        Model.Partesociale = false;
                    }

                    @Html.CheckBoxFor(model => model.Partesociale.Value, htmlAttributes: new { @style = "margin-bottom:30px", @Id = "Partesiciale", @Name = "Partesociale" })
                </div>
            </div>

            <div class="modal-footer row" style="margin-top: 30px">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Modifica" class="btn btn-success" />
                    <input type="button" value="Chiudi finestra" onclick="hideModal()" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function onSuccessModifica(data) {
        @Html.OnSuccessHideModal()
    }
</script>



